<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="robotic_gripper" params="parent">

    <link name="gripper_base_link">
      <visual>
        <geometry>
          <box size="0.08 0.08 0.02"/>
        </geometry>
        <material name="gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.08 0.08 0.02"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.2"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                 iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
    </link>

    <link name="left_finger">
      <visual>
        <geometry>
          <box size="0.01 0.02 0.06"/>
        </geometry>
        <material name="blue">
          <color rgba="0 0 1 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.01 0.02 0.06"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.05"/>
        <inertia ixx="0.00001" ixy="0.0" ixz="0.0"
                 iyy="0.00001" iyz="0.0" izz="0.00001"/>
      </inertial>
    </link>

    <link name="right_finger">
      <visual>
        <geometry>
          <box size="0.01 0.02 0.06"/>
        </geometry>
        <material name="blue">
          <color rgba="0 0 1 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.01 0.02 0.06"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.05"/>
        <inertia ixx="0.00001" ixy="0.0" ixz="0.0"
                 iyy="0.00001" iyz="0.0" izz="0.00001"/>
      </inertial>
    </link>

    <!-- Mount gripper to robot -->
    <joint name="gripper_mount" type="fixed">
      <parent link="${parent}"/>
      <child link="gripper_base_link"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </joint>

    <!-- Left finger prismatic -->
    <joint name="left_finger_joint" type="prismatic">
      <parent link="gripper_base_link"/>
      <child link="left_finger"/>
      <origin xyz="0 0.02 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="0.0" upper="0.04" effort="10" velocity="0.1"/>
    </joint>

    <!-- Right finger prismatic -->
    <joint name="right_finger_joint" type="prismatic">
      <parent link="gripper_base_link"/>
      <child link="right_finger"/>
      <origin xyz="0 -0.02 0" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit lower="0.0" upper="0.04" effort="10" velocity="0.1"/>
    </joint>

  </xacro:macro>
</robot>
